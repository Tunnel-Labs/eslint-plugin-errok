{
	"name": "@tunnel/eslint-plugin-neverthrow",
	"version": "0.0.3",
	"description": "",
	"exports": "./dist/$.js",
	"prettier": "@tunnel/prettier-config",
	"files": [
		"dist"
	],
	"scripts": {
		"clean": "rimraf dist",
		"prebuild": "npm run clean",
		"build": "tsc -p tsconfig.build.json",
		"lint": "run-s lint:ts lint:eslint lint:prettier",
		"lint:ts": "tsc --noEmit",
		"lint:eslint": "eslint '**/*.ts'",
		"lint:prettier": "prettier '**/*.{ts,json,yaml,md}'",
		"fix": "run-s fix:eslint fix:prettier",
		"fix:eslint": "npm run lint:eslint -- --fix",
		"fix:prettier": "npm run lint:prettier -- --write",
		"release": "semantic-release",
		"test": "vitest run",
		"add-rule": "tsx scripts/add-rule",
		"update": "tsx scripts/update",
		"semantic-release": "semantic-release"
	},
	"peerDependencies": {
		"@typescript-eslint/parser": "^6",
		"eslint": "^8"
	},
	"dependencies": {
		"@types/eslint-utils": "^3.0.5",
		"eslint-utils": "3.0.0",
		"tsutils": "3.21.0"
	},
	"devDependencies": {
		"@tunnel/prettier-config": "^0.0.0",
		"@types/eslint": "^8.56.0",
		"@types/node": "^20.10.6",
		"@typescript-eslint/eslint-plugin": "^6.17.0",
		"@typescript-eslint/parser": "^6.17.0",
		"@typescript-eslint/rule-tester": "^6.17.0",
		"@typescript-eslint/types": "^6.17.0",
		"@typescript-eslint/utils": "^6.17.0",
		"eslint": "^8.56.0",
		"neverthrow": "6.1.0",
		"npm-run-all": "^4.1.5",
		"outdent": "^0.8.0",
		"pathe": "^1.1.1",
		"prettier": "^3.1.1",
		"rimraf": "^5.0.5",
		"semantic-release": "^22.0.12",
		"tsx": "^4.7.0",
		"typescript": "^5.3.3",
		"vitest": "^1.1.1"
	},
	"lint-staged": {
		"*.ts": [
			"eslint --fix",
			"prettier --write"
		],
		"*.{json,yaml,md}": [
			"prettier --write"
		]
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/Tunnel-Labs/eslint-plugin-nevethrow"
	},
	"keywords": [
		"typescript",
		"template",
		"eslint",
		"eslintplugin",
		"eslint-plugin"
	],
	"author": "",
	"license": "MIT",
	"bugs": {
		"url": "https://github.com/Tunnel-Labs/eslint-plugin-nevethrow/issues"
	},
	"homepage": "https://github.com/Tunnel-Labs/eslint-plugin-nevethrow#readme"
}
