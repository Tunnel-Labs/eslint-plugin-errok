{
	"compilerOptions": {
		"target": "ES2015",
		"module": "Node16",
		"rootDir": "src",
		"outDir": "dist",
		"declaration": false,
		"strict": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"noImplicitReturns": true,
		"noFallthroughCasesInSwitch": true,
		"moduleResolution": "Node16",
		"resolveJsonModule": true,
		"esModuleInterop": true,
		"skipLibCheck": true
	},
	"include": [
		"src"
	],
	"exclude": [
		".prettierrc.js",
		"node_modules"
	]
}